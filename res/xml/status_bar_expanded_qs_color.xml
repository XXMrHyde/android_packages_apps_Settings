<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/quicksettings_color_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <CheckBoxPreference
        android:key="quick_tiles_use_different_activity_color"
        android:title="@string/quick_tiles_use_different_activity_color_title"
        android:summary="@string/quick_tiles_use_different_activity_color_summary" />

    <PreferenceCategory
        android:title="@string/quick_tiles_cat_tiles">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="quick_tiles_bg_color"
             android:title="@string/quick_tiles_bg_color_title"
             android:defaultValue="0xff161616" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="quick_tiles_bg_pressed_color"
             android:title="@string/quick_tiles_bg_pressed_color_title"
             android:defaultValue="0xff212121" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="quick_tiles_text_color"
             android:title="@string/quick_tiles_text_color_title"
             android:defaultValue="0xffcccccc" />

        <com.android.settings.widget.SeekBarPreference
             android:key="quick_tiles_alpha"
             android:title="@string/quick_tiles_alpha_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/quick_tiles_cat_icons">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="quick_tiles_icon_normal_color"
             android:title="@string/button_icon_normal_color_title"
             android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="quick_tiles_icon_enabled_color"
             android:title="@string/button_icon_enabled_color_title"
             android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="button_icon_disabled_color"
             android:title="@string/button_icon_disabled_color_title"
             android:defaultValue="0xff404040" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="quick_tiles_cat_signal_activity"
        android:title="@string/cat_signal_activity_title">

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="quick_tiles_signal_activity_normal_color"
            android:title="@string/color_normal_title"
            android:defaultValue="@android:color/white" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="quick_tiles_signal_activity_connected_color"
            android:title="@string/color_connected_title"
            android:defaultValue="@android:color/holo_orange_dark" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="quick_tiles_cat_wifi_activity"
        android:title="@string/cat_wifi_activity_title">

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="quick_tiles_wifi_activity_normal_color"
            android:title="@string/color_normal_title"
            android:defaultValue="@android:color/white" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="quick_tiles_wifi_activity_connected_color"
            android:title="@string/color_connected_title"
            android:defaultValue="@android:color/holo_orange_dark" />

    </PreferenceCategory>
</PreferenceScreen>
