<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_battery_status_title">

    <PreferenceCategory
        android:key="battery_status_cat_options_general"
        android:title="@string/cat_options_general_title">

	    <ListPreference
	        android:key="battery_status_type"
	        android:dialogTitle="@string/type_title"
	        android:title="@string/type_title"
	        android:entries="@array/battery_status_type_entries"
	        android:entryValues="@array/battery_status_type_values" />

        <CheckBoxPreference
            android:key="battery_status_show_text"
            android:title="@string/battery_status_show_text_title"
            android:summary="@string/battery_status_show_text_summary" />

        <ListPreference
            android:key="battery_status_animation_speed"
            android:title="@string/battery_status_animation_speed"
            android:entries="@array/battery_status_animation_speed_entries"
            android:entryValues="@array/battery_status_animation_speed_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="battery_status_cat_options_ring"
        android:title="@string/battery_status_cat_options_ring_title">

	    <CheckBoxPreference
		    android:key="battery_circle_dotted"
		    android:title="@string/dotted_title"
		    android:summary="@string/dotted_summary" />

        <ListPreference
            android:key="battery_circle_dot_length"
            android:title="@string/dot_length_title"
            android:entries="@array/battery_circle_dot_entries"
            android:entryValues="@array/battery_circle_dot_values"
            android:persistent="false"
            android:defaultValue="3" />

        <ListPreference
            android:key="battery_circle_dot_interval"
            android:title="@string/dot_interval_title"
            android:entries="@array/battery_circle_dot_entries"
            android:entryValues="@array/battery_circle_dot_values"
            android:persistent="false"
            android:defaultValue="2" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="battery_status_cat_colors"
        android:title="@string/cat_colors_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="battery_status_color"
            android:title="@string/battery_status_color"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="battery_text_color"
            android:title="@string/battery_text_color"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="battery_text_charging_color"
            android:title="@string/battery_text_charging_color"
            android:defaultValue="0xffffffff" />

    </PreferenceCategory>
</PreferenceScreen>
