<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/interface_lock_screen_title" >

    <PreferenceCategory
        android:key="lockscreen_category_info_area"
        android:title="@string/lockscreen_category_info_area_title">

        <CheckBoxPreference
            android:key="lockscreen_show_battery_status_ring"
            android:title="@string/lockscreen_show_battery_status_ring_title"
	        android:summary="@string/lockscreen_show_battery_status_ring_summary"
            android:persistent="false"
            android:defaultValue="false" />

        <PreferenceScreen
            android:key="lockscreen_battery_status_ring_style"
            android:fragment="com.android.settings.darkkat.LockscreenBatteryStatusRingStyle"
            android:title="@string/lockscreen_battery_status_ring_style_title" />

        <CheckBoxPreference
            android:key="lockscreen_show_custom_carrier_label"
            android:title="@string/show_custom_carrier_label_title"
            android:persistent="false"
            android:defaultValue="false" />

        <PreferenceScreen
            android:key="lockscreen_carrier_label_style"
            android:fragment="com.android.settings.darkkat.LockscreenCarrierLabelStyle"
            android:title="@string/custom_carrier_label_title" />

        <CheckBoxPreference
            android:key="lockscreen_always_show_battery_status"
            android:title="@string/lockscreen_always_show_battery_status_title"
            android:summary="@string/lockscreen_always_show_battery_status_summary"
            android:persistent="false"
            android:defaultValue="false" />

        <PreferenceScreen
            android:key="lockscreen_battery_status_style"
            android:fragment="com.android.settings.darkkat.LockscreenBatteryStatusStyle"
            android:title="@string/lockscreen_battery_status_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_category_background"
        android:title="@string/lockscreen_category_background_title">

        <CheckBoxPreference
            android:key="lockscreen_see_through"
            android:title="@string/lockscreen_see_through_title"
            android:summary="@string/lockscreen_see_through_summary"
            android:persistent="false"
            android:defaultValue="false" />

        <com.android.settings.widget.SeekBarPreference
             android:key="lockscreen_blur_radius"
             android:title="@string/lockscreen_blur_radius_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_category_widgets"
        android:title="@string/lockscreen_category_widgets_title">

        <CheckBoxPreference
            android:key="lockscreen_enable_widgets"
            android:title="@string/security_enable_widgets_title"/>

        <CheckBoxPreference
            android:key="lockscreen_maximize_widgets"
            android:title="@string/lockscreen_maximize_widgets_title"
            android:summary="@string/lockscreen_maximize_widgets_summary"
            android:persistent="false"
            android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>
