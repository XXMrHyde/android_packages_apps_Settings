<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/weather_title">

    <PreferenceScreen
        android:key="weather_config"
        android:title="@string/weather_config_title"
        android:summary="@string/weather_config_summary">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="net.darkkatroms.weather.SettingsActivity"
            android:targetPackage="net.darkkatroms.weather" />
    </PreferenceScreen>

    <PreferenceScreen
        android:key="weather_detailed_weather_settings"
        android:title="@string/detailed_weather_title"
        android:summary="@string/weather_detailed_weather_settings_summary"
        android:fragment="com.android.settings.darkkat.DetailedWeatherSettings" />
</PreferenceScreen>
