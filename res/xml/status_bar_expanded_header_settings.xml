<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_expanded_header_settings_title">

    <PreferenceCategory
        android:key="expanded_header_cat_weather"
        android:title="@string/weather_title">

        <Preference
            android:key="expanded_header_lock_clock_missing"
            android:title="@string/lock_clock_missing_title"
            android:summary="@string/lock_clock_missing_summary"
            android:enabled="false" />

        <CheckBoxPreference
	        android:key="expanded_header_show_weather"
	        android:title="@string/show_title"
	        android:summary="@string/show_weather_summary"
	        android:defaultValue="false" />

        <CheckBoxPreference
	        android:key="expanded_header_show_weather_location"
	        android:title="@string/show_location_title"
	        android:summary="@string/show_location_summary"
	        android:defaultValue="true" />

	</PreferenceCategory>

    <PreferenceCategory
        android:key="expanded_header_cat_color"
        android:title="@string/colors_title">

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="expanded_header_background_color"
            android:title="@string/background_title"
            android:defaultValue="0xff384248" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="expanded_header_text_color"
            android:title="@string/text_title"
            android:defaultValue="0xffffffff" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="expanded_header_icon_color"
            android:title="@string/icons_title"
            android:defaultValue="0xffffffff" />

	</PreferenceCategory>
</PreferenceScreen>

