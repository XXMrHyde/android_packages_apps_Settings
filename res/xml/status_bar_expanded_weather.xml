<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_expanded_weather_title">

    <PreferenceCategory
        android:key="status_bar_expanded_weather_cat_options"
        android:title="@string/options_title">

        <CheckBoxPreference
            android:key="enable_weather"
            android:title="@string/weather_enable_title"
            android:summary="@string/weather_enable_summary" />

        <ListPreference
            android:key="weather_style"
            android:title="@string/weather_style_title"
            android:entries="@array/weather_style_entries"
            android:entryValues="@array/weather_style_values" />

        <ListPreference
            android:key="weather_icon_style"
            android:title="@string/weather_icon_style_title"
            android:entries="@array/weather_icon_style_entries"
            android:entryValues="@array/weather_icon_style_values" />

        <CheckBoxPreference
            android:key="weather_use_custom_location"
            android:title="@string/weather_use_custom_location_title"
            android:summary="@string/weather_use_custom_location_summary" />

        <EditTextPreference
            android:key="weather_custom_location"
            android:title="@string/weather_custom_location_title"
            android:dialogTitle="@string/weather_custom_location_dialog_title"
            android:dialogMessage="@string/weather_custom_location_dialog_message" />

        <CheckBoxPreference
            android:key="weather_show_location"
            android:title="@string/weather_show_location_title"
            android:summary="@string/weather_show_location_summary" />

        <CheckBoxPreference
            android:key="weather_use_celcius"
            android:title="@string/weather_use_celcius_title"
            android:summary="@string/weather_use_celcius_summary"/>

        <ListPreference
            android:key="weather_refresh_interval"
            android:title="@string/weather_refresh_interval_title"
            android:entries="@array/weather_refresh_interval_entries"
            android:entryValues="@array/weather_refresh_interval_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="status_bar_expanded_weather_cat_colors"
        android:title="@string/colors_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="weather_panel_background_color"
            android:title="@string/weather_panel_background_color_title"
            android:defaultValue="0xff191919" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="weather_panel_background_pressed_color"
            android:title="@string/weather_panel_background_pressed_color_title"
            android:defaultValue="0xff323232" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="weather_icon_color"
            android:title="@string/icon_title"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="weather_text_color"
            android:title="@string/text_title"
            android:defaultValue="0xffffffff" />

    </PreferenceCategory>
</PreferenceScreen>
